                @Html.DisplayNameFor(model => model.MakinaAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakinaTanitim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimYolu)
