                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/accordions.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/js/jquery.singlePageNav.min.js" asp-append-version="true"></script>
    <script src="~/js/owl.js" asp-append-version="true"></script>
    <script src="~/js/slick.js" asp-append-version="true"></script>
    <script src="~/js/writer.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

